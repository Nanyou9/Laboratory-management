/**index.wxss**/


.bg{
  background: #fff;
  height:100vh;
  overflow:scroll;overflow-y:hidden
}
.van-grid-item__content{
  background: transparent !important;
}
.van-info{
  background-color:#1088ad !important;
  box-shadow: 0px 1px 3px #545252;
}
.topnav image{
  position: relative;
  left: 0;
  top:0;
  width:100vw;
  height:100vh;
}
.van-grid-item{
  padding-bottom:15rpx
}
.container{
  padding:0;
}
.grid{
  margin-top: 10px;
}
.logo{
  font-size: 34px;
    font-weight: 600;
    color: rgb(249, 255, 255);
    text-shadow: 2px 2px 0 black;
    margin-top:40rpx;
}
.content{
  position: absolute;
  border-radius: 50rpx;
  background-color: rgba(255, 255, 255, 0.8);
  bottom:50rpx;
  width:90vw;
  
}

.custom-class{
  border:0;
}
.card{
  margin-top:30rpx;
  margin-bottom:50rpx;
  width:90%;
  left:5%;
}
.van-card{
  min-height: 110px;
  left:5%;
  border: 1px solid #d2d2d2;
  border-radius: 20rpx !important;
  box-shadow: 3px 3px 4px #c1c1c1;
}
.van-card__header{
  min-height: 80rpx !important;
  height: 80rpx !important;
}
.btn{
  position: fixed;
  bottom:0;
  left:0;
  width:85vw;
}